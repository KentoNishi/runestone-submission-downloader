{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.js",
  ],
}
